{
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-html": "^8.0.0",
    "eslint-plugin-template": "^0.7.0",
    "prettier": "^3.2"
  },
  "prettier": {
    "printWidth": 120
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "plugins": [
      "html",
      "template"
    ],
    "extends": "eslint:recommended"
  }
}
